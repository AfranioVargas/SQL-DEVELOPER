--validate table creation of AFRANIO employee 
CREATE TABLE TB_FUNCIONARIOS_AFRANIO 
(
MATRICULA VARCHAR2 (4),
NOME VARCHAR2 (100),
CARGO VARCHAR2 (50),
PROJETO VARCHAR2 (50),
ENDERECO VARCHAR2 (150),
BAIRRO VARCHAR2 (50),
CIDADE VARCHAR2 (50),
ESTADO VARCHAR2 (2),
IDADE INTEGER
);

